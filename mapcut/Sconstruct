# -*- python -*-

env = Environment()
env.Append(CXXFLAGS="-Wall -Wextra -Wno-unused-function -Wno-unused-parameter -g -O0 --std=c++11")

sources = ["main.cc", "token.cc", "lexer.cc", "pdx.cc", "default_map.cc", "definitions_table.cc"]
sources += env.CXXFile('scanner.ll')

env.Program('mapcut', sources, LIBS=["boost_filesystem", "boost_system"])
